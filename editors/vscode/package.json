{
  "name": "inference",
  "displayName": "Inference",
  "description": "Language support for Inference - a programming language for verified WebAssembly",
  "version": "0.0.3",
  "publisher": "inference-lang",
  "license": "GPL-3.0",
  "icon": "icons/inference.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Inferara/inference"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "inference",
    "webassembly",
    "wasm",
    "rocq",
    "coq",
    "formal-verification"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:**/*.inf"
  ],
  "contributes": {
    "languages": [
      {
        "id": "inference",
        "aliases": [
          "Inference",
          "inference",
          "inf"
        ],
        "extensions": [
          ".inf"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file_icon.svg",
          "dark": "./icons/file_icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "inference",
        "scopeName": "source.inference",
        "path": "./syntaxes/inference.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "inference.installToolchain",
        "title": "Inference: Install Toolchain"
      },
      {
        "command": "inference.updateToolchain",
        "title": "Inference: Update Toolchain"
      },
      {
        "command": "inference.selectVersion",
        "title": "Inference: Select Toolchain Version"
      },
      {
        "command": "inference.runDoctor",
        "title": "Inference: Run Doctor"
      },
      {
        "command": "inference.showOutput",
        "title": "Inference: Show Output"
      }
    ],
    "configuration": {
      "title": "Inference",
      "properties": {
        "inference.path": {
          "type": "string",
          "default": "",
          "description": "Path to infs binary. Leave empty for auto-detection."
        },
        "inference.autoInstall": {
          "type": "boolean",
          "default": true,
          "description": "Prompt to install toolchain if not found."
        },
        "inference.checkForUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Check for toolchain updates on activation."
        }
      }
    },
    "walkthroughs": [
      {
        "id": "inference.gettingStarted",
        "title": "Get Started with Inference",
        "description": "Set up the Inference toolchain and build your first verified program.",
        "featuredFor": [
          "**/*.inf"
        ],
        "steps": [
          {
            "id": "inference.walkthrough.install",
            "title": "Install the Toolchain",
            "description": "The Inference toolchain provides the compiler, verifier, and project tools.\n\n[Install Toolchain](command:inference.installToolchain)\n\nAlternatively, [download manually](https://github.com/Inferara/inference/releases) or [configure a custom path](command:workbench.action.openSettings?%5B%22inference.path%22%5D).",
            "media": {
              "image": "icons/inference.png",
              "altText": "Inference logo"
            },
            "completionEvents": [
              "onCommand:inference.installToolchain"
            ]
          },
          {
            "id": "inference.walkthrough.verify",
            "title": "Verify Your Installation",
            "description": "Run the built-in doctor to check that all toolchain components are working correctly.\n\n[Run Doctor](command:inference.runDoctor)\n\nThe status bar at the bottom of VS Code shows toolchain health at a glance.",
            "media": {
              "image": "icons/inference.png",
              "altText": "Inference logo"
            },
            "completionEvents": [
              "onCommand:inference.runDoctor"
            ]
          },
          {
            "id": "inference.walkthrough.createProject",
            "title": "Create a Project",
            "description": "Create a new `.inf` file to start writing Inference code. The extension provides syntax highlighting, bracket matching, and code folding.\n\n[Create New File](command:workbench.action.files.newUntitledFile)",
            "media": {
              "image": "icons/inference.png",
              "altText": "Inference logo"
            },
            "completionEvents": [
              "onLanguage:inference"
            ]
          },
          {
            "id": "inference.walkthrough.build",
            "title": "Build Your Program",
            "description": "Use the integrated terminal to compile your Inference source file:\n\n```\ninfs build main.inf --parse --codegen -o\n```\n\nThis produces a WebAssembly `.wasm` file. Learn more in the [Inference Book](https://github.com/Inferara/book).",
            "media": {
              "image": "icons/inference.png",
              "altText": "Inference logo"
            },
            "completionEvents": [
              "stepSelected"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "build:prod": "node esbuild.mjs --production",
    "watch": "node esbuild.mjs --watch",
    "test": "node --import tsx --test src/test/**/*.test.ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "tsx --test test/grammar.test.ts test/language-config.test.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.1.0"
  }
}
