    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI",
            "preLaunchTask": "BuildCompiler",
            "program": "${workspaceFolder}/cli",
            "args": [
                "${workspaceFolder}/test_data/wasm/",
                "-o",
                "",
                "-g",
                "v"
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug wasm key",
            "preLaunchTask": "BuildCompiler",
            "program": "${workspaceFolder}/cli",
            "args": [
                "${workspaceFolder}/test_data/wasm/",
                "--wasm"
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug playground",
            "preLaunchTask": "BuildCompiler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=inference-playground-server",
                    "--package=inference-playground-server"
                ],
                "filter": {
                    "name": "inference-playground-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        }
    ]
}